rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- USERS ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // --- TRIPS ---
    match /trips/{tripId} {
      // Anyone signed in can read trips (we filter client-side by membership)
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // --- EXPERIENCES & DESTINATIONS ---
    match /destinations/{destId} { allow read: if true; allow write: if isSignedIn(); }
    match /experiences/{expId} { allow read: if true; allow write: if isSignedIn(); }

    // --- BOOKINGS ---
    match /bookings/{bookingId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    // --- REVIEWS ---
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}
